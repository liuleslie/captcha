{
  "manifest_version": 2,
  "name": "CAPTCHA Logger v0",
  "version": "0.1",
  "description": "Minimal CAPTCHA data collector: cursor track, images, DOM position",

  "browser_specific_settings": {
    "gecko": {
      "id": "captcha-logger@localhost",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-48.png",
      "32": "icons/icon-96.png"
    },
    "default_title": "Start CAPTCHA Recording"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}