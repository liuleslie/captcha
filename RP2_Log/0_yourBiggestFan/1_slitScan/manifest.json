{
  "manifest_version": 2,
  "name": "Your Biggest Fan",
  "version": "1.0",
  "description": "Slit-scan cursor tracker",

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Toggle Cursor Recording"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ]
}